{
  "name": "aws-custom-resources",
  "version": "0.0.0",
  "main": "src/index.ts",
  "publishConfig": {
    "main": "lib/index.js",
    "types": "lib/index.d.ts"
  },
  "scripts": {
    "build": "rm -f tsconfig.tsbuildinfo && tsc --noEmit false",
    "copy-readme": "cp ../../README.md .",
    "copy-licence": "cp ../../LICENSE .",
    "prepack": "yarn copy-readme && yarn copy-licence && yarn build",
    "postpack": "rm -rf lib"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/joostvdwsd/aws-custom-resources",
    "directory": "workspaces/aws-custom-resources"
  },
  "keywords": [
    "aws",
    "custom-resource",
    "typescript",
    "cloudformation",
    "custom",
    "resource",
    "cfn",
    "cdk"
  ],
  "author": "Joost van der Waal <joost@jvdwaal.nl>",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.138",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.2",
    "esbuild": "^0.21.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "aws-lambda": "^1.0.7"
  },
  "packageManager": "yarn@4.2.2",
  "engines": {
    "node": ">=18.12.0"
  },
  "files": [
    "/lib/{**/!(*._test_).(js|d.ts),!_tests_/**}",
    "CHANGELOG.md"
  ],
  "jest": {
    "testMatch": [
      "**/*._test_.ts"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "diagnostics": {
            "ignoreCodes": [
              151001
            ]
          }
        }
      ]
    }
  }
}
